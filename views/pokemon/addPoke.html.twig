{% extends "./../main.html.twig" %}
{% block main %}
<div class="container">
<div class="row">

  <form class="col-md-6 mx-auto mt-5" method="post" action="{% if action == "/updatePoke" %}{{action}}/{{poks.id}}{% else %}{{action}}{% endif %}">
        <div>
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" name="name"  placeholder="Entrer le nom" value="{{poks.name}}" >
         </div>
        <div>
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type" name="type"  placeholder="Entrer le type" value="{{poks.type}}" >
        </div>
        <div >
            <label for="pointCombat">Points Combat</label>
            <input type="number" class="form-control" id="combat" name="pointCombat" placeholder="Entrer le nombre de PC" value="{{poks.pointCombat}}" >
        </div>
        <div >
            <label for="pointVie">Points Vie</label>
            <input type="number" class="form-control" id="vie" name="pointVie" placeholder="Entrer le nombre de PV" value="{{poks.pointVie}}" >
        </div>
        
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>
</div>
</div>
{% endblock %}